<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyPhillReminderApp_MelanyIssac.Views.AppLoginPage"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="White"
             BackgroundImageSource="AppLoginBG">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" Padding="50,25,50,25">
            <Entry x:Name="TxtUserName" Placeholder="Email" FontSize="30" Keyboard="Email"/>
            <Entry x:Name="TxtPassword" Placeholder="Password" FontSize="30" Keyboard="Default" IsPassword="True"/>
            <Switch x:Name="SwshowPassword" IsToggled="False" Toggled="SwshowPassword_Toggled"/>
            <Button x:Name="BtnLogin" Text="LOGIN" BackgroundColor="LightSeaGreen" CornerRadius="15" Clicked="BtnLogin_Clicked"/>
            <Button x:Name="BtnSignUp" Text="SIGN UP" BackgroundColor="Coral" CornerRadius="15" Clicked="BtnSignUp_Clicked"/>
            <Label x:Name="LblPasswordReccovery" Text="Password Recovery"/>



        </StackLayout>
    </ContentPage.Content>
</ContentPage>